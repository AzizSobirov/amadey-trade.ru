---
import { H2, Image, Icon } from "ui";
---

<header class="header">
  <div class="header__top">
    <div class="container">
      <div class="header__top-item">
        <Icon src="marker.svg" />
        <div class="text-sm font-light">Казань, Сулеймановой, 3</div>
      </div>
      <div class="header__top-item">
        <Icon src="clock.svg" />
        <div class="text-sm font-light">Режим работы: с 9:00 до 18:00</div>
      </div>
      <div class="header__top-item">
        <Icon src="email.svg" />
        <a href="mailto:into@amadey-trade.ru" class="text-sm font-light"
          >into@amadey-trade.ru</a
        >
      </div>
      <div class="header__top-item">
        <Icon src="phone.svg" />
        <a href="tel:+78003020528" class="text-sm font-bold">8-800-302-05-28</a>
      </div>
      <div class="header__top-item btn">
        <a href="tel:+78003020528" class="text-sm">Перезвонить мне</a>
      </div>
    </div>
  </div>

  <div class="header__content">
    <div class="container">
      <a href="/" class="header__logo" title="logo">
        <Image src="logo.svg" alt="logo" />
      </a>

      <nav class="header__menu">
        <ul class="menu">
          <li class="menu-item active"><a href="/">Главная</a></li>
          <li class="menu-item menu-item-has-children">
            <a href="/services">Услуги</a>
            <!-- <ul class="sub-menu">
              <li class="menu-item"><a href="#">Подбор новых авто</a></li>
              <li class="menu-item"><a href="#">Эндоскопия</a></li>
            </ul> -->
          </li>
          <li class="menu-item"><a href="/about">О нас</a></li>
          <li class="menu-item"><a href="/contacts">Контакты</a></li>
        </ul>
      </nav>

      <div class="header__actions">
        <a href="#" class="btn">
          <Icon src="search.svg" />
        </a>
        <a href="/profile" class="btn">
          <Icon src="user.svg" />
        </a>
        <a href="#" class="btn">
          <Icon src="favourites.svg" />
        </a>
        <a href="#" class="btn">
          <Icon src="cart.svg" />
        </a>
      </div>
    </div>
  </div>
</header>
